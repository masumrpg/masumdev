{
  "name": "@masumdev/rn-scroll-to-hide",
  "version": "1.0.2",
  "homepage": "https://docs.masum.cloud/docs/category/-scroll-to-hide",
  "scripts": {
    "build": "bob build"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "dist",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.lib.json",
          "tsc": "../../node_modules/.bin/tsc"
        }
      ]
    ]
  },
  "main": "./dist/commonjs/index.js",
  "module": "./dist/module/index.js",
  "types": "./dist/typescript/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/typescript/index.d.ts",
      "import": "./dist/module/index.js",
      "require": "./dist/commonjs/index.js",
      "default": "./src/index.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "!**/*.tsbuildinfo"
  ],
  "keywords": [
    "react-native",
    "scroll",
    "scroll-to-hide",
    "hide",
    "scroll-to",
    "scroll-to-hide-header",
    "scroll-to-hide-footer",
    "scroll-to-hide-component",
    "scroll-to-hide-view",
    "scroll-to-hide-view-component",
    "scroll-to-hide-view-header",
    "scroll-to-hide-view-footer",
    "scroll-to-hide-view-component-header",
    "scroll-to-hide-view-component-footer",
    "scroll-to-hide-view-component-header-footer",
    "scroll-to-hide-view-component-header-footer-component",
    "scroll-to-hide-view-component-header-footer-component-header",
    "mobile"
  ],
  "author": "Masum",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/masumrpg/masumdev.git",
    "directory": "libs/rn-scroll-to-hide"
  },
  "peerDependencies": {
    "react": "^18.3.1",
    "react-native": "^0.76.9",
    "react-native-reanimated": "^3.16.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "typescript": "^5.7.2"
  }
}
